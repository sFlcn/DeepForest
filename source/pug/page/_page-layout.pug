include ../global/_global-constants.pug
include ../global/_global-mixins.pug

block variables
  -
    let logoHref = currentPage === "index" ? false : "./index.html";
    const pDescription = pageDescription ? pageDescription : "Deep Forest: история группы, альбомы, тексты песен";
    const pTitle = pageTitle ? pageTitle : pDescription;

doctype html
html.page(lang="ru", dir="ltr", prefix="og: https://ogp.me/ns#")
  head
    block head
      meta(charset="utf-8")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(name="description", content=pDescription)
      title= pTitle
      link(rel="stylesheet", href="./css/style-min.css")
      link(rel="preload", as="font", type="font/woff2", href="./fonts/evolventa-regular.woff2", crossorigin)
      include _favicons.pug
      include _og.pug

  body.page__body

    include ../yandex/_yandexmetrika.pug

    include _page-header.pug

    block main

    include _page-footer.pug

    block scripts
      script(src="./js/scripts.bundle.js")
